
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registro Banco</h2>

<form asp-controller="Banco" asp-action="Create" method="post"> 
    <div class="row"> 
        <div class="form-group"> <input name="nombre" placeholder="Nombre" class="form-control" /> 
        </div> 
        <div class="form-group"> <input name="direccion" placeholder="Direccion" class="form-control" type="text" /> 
        </div> 
        <div class="form-group"> <button type="submit" class="btn btn-default">Submit</button> 
        </div> 
    </div> 
</form>
